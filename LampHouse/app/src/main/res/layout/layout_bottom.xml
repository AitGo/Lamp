<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:background="@color/bg_tab_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"

        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/page_home"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/page_iv_home"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/shouye_1"/>
            <com.rbu.lamphouse.widget.AppTextView
                android:id="@+id/page_tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home"
                android:textSize="10sp"
                android:textColor="@color/text_black"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/page_device"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/page_iv_device"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/device"/>
            <com.rbu.lamphouse.widget.AppTextView
                android:id="@+id/page_tv_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device"
                android:textSize="10sp"
                android:textColor="@color/text_black"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/page_message"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/page_iv_message"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/message"/>
            <com.rbu.lamphouse.widget.AppTextView
                android:id="@+id/page_tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/message"
                android:textSize="10sp"
                android:textColor="@color/text_black"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/page_user"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="27dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/page_iv_user"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/user"/>
            <com.rbu.lamphouse.widget.AppTextView
                android:id="@+id/page_tv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user"
                android:textSize="10sp"
                android:textColor="@color/text_black"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>