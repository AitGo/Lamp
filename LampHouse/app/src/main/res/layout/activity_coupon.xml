<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/bg_blue">

        <LinearLayout
            android:id="@+id/coupon_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp">

            <ImageView
                android:layout_width="17dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:background="@mipmap/back"/>
        </LinearLayout>

        <com.rbu.lamphouse.widget.AppTextView
            android:id="@+id/coupon_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="@color/text_white"
            android:textSize="16sp"/>

        <LinearLayout
            android:id="@+id/coupon_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="5dp"

            android:paddingRight="15dp"
            android:paddingTop="5dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:background="@mipmap/tianjia"/>
        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/coupon_unused"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:layout_marginLeft="9dp"
            android:background="@drawable/bg_choose"
            android:orientation="vertical"
            android:gravity="center">
            <com.rbu.lamphouse.widget.AppTextView
                android:id="@+id/coupon_unused_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00USD"
                android:textSize="14sp"
                android:textColor="@color/text_white"/>
            <com.rbu.lamphouse.widget.AppTextView
                android:id="@+id/coupon_unused_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unused"
                android:textSize="12sp"
                android:textColor="@color/text_white"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/coupon_used"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:background="@drawable/bg_unchoose"
            android:orientation="vertical"
            android:gravity="center">
            <com.rbu.lamphouse.widget.AppTextView
                android:id="@+id/coupon_used_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00USD"
                android:textSize="14sp"
                android:textColor="@color/text_black"/>
            <com.rbu.lamphouse.widget.AppTextView
                android:id="@+id/coupon_used_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/used"
                android:textSize="12sp"
                android:textColor="@color/text_black"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/coupon_overdue"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:layout_marginRight="9dp"
            android:background="@drawable/bg_unchoose"
            android:orientation="vertical"
            android:gravity="center">
            <com.rbu.lamphouse.widget.AppTextView
                android:id="@+id/coupon_overdue_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00USD"
                android:textSize="14sp"
                android:textColor="@color/text_black"/>
            <com.rbu.lamphouse.widget.AppTextView
                android:id="@+id/coupon_overdue_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/overdue"
                android:textSize="12sp"
                android:textColor="@color/text_black"/>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/coupon_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"></FrameLayout>

</LinearLayout>