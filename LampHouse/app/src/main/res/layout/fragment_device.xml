<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_page">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/bg_blue">

        <com.rbu.lamphouse.widget.AppTextView
            android:id="@+id/device_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/device"
            android:textColor="@color/text_white"
            android:textSize="16sp"/>

        <LinearLayout
            android:id="@+id/device_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="5dp"

            android:paddingRight="15dp"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/device_btn_search"
                android:layout_width="20dp"
                android:layout_height="17dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:background="@mipmap/shuaxin"/>
        </LinearLayout>
    </RelativeLayout>

    <com.rbu.lamphouse.widget.AppTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:text="@string/connected"
        android:textColor="@color/text_black"
        android:textSize="12sp"/>
    <ListView
        android:id="@+id/device_lv_conn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:visibility="gone"/>

    <com.rbu.lamphouse.widget.AppTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:text="@string/unconnected"
        android:textColor="@color/text_black"
        android:textSize="12sp"/>
    <ListView
        android:id="@+id/device_lv_unconn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:visibility="gone"/>
</LinearLayout>