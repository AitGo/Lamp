<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background"
        >
            <!--<size
                android:width="1dp"
                android:height="1dp" />
            <solid android:color="@color/bg_seek_normal"/>-->
        <shape>
            <corners android:radius="5dp" />
            <gradient
                android:angle="270"
                android:centerColor="@color/bg_seek_normal"
                android:centerY="0.75"
                android:endColor="@color/bg_seek_normal"
                android:startColor="@color/bg_seek_normal" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
